<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:text="About This App"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:letterSpacing="0.02"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Information Card -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/result_card"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Developer Information"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Full Name:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Mohamad Harith Azman Bin Mohamad Ismail"
                android:textSize="18sp"
                android:textColor="#555555"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Student ID:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="2022715231"
                android:textSize="18sp"
                android:textColor="#555555"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Course Code:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="CS240"
                android:textSize="18sp"
                android:textColor="#555555"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Course Name:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Bachelor of Information Technology (Hons)"
                android:textSize="18sp"
                android:textColor="#555555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Â© 2024 ElecZ Bill Calculator"
                android:textSize="15sp"
                android:textColor="#777777"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Website Link -->
        <TextView
            android:id="@+id/textLink"
            android:text="Visit the app website"
            android:textSize="20sp"
            android:textColor="#0057D9"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:text="Back to Menu"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="28dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_secondary" />

    </LinearLayout>

</ScrollView>
